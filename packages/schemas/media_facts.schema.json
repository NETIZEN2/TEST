{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "media_facts.schema.json",
  "title": "MediaFacts",
  "type": "object",
  "properties": {
    "exif": {
      "type": "object",
      "description": "EXIF metadata key/value pairs",
      "additionalProperties": {"type": "string"}
    },
    "hashes": {
      "type": "object",
      "properties": {
        "phash": {"type": "string"},
        "ahash": {"type": "string"}
      },
      "additionalProperties": false
    },
    "ela": {
      "type": "object",
      "description": "Error level analysis hints",
      "additionalProperties": {"type": "number"}
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Confidence in verification"
    }
  },
  "additionalProperties": false,
  "default": {}
}
